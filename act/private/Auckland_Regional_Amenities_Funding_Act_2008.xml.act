    <schedule date.instructed="2006-12-07" id="DLM1140126" in.amend="false" instructing.office="Unknown department" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" act.no="3" act.type="private" date.as.at="2010-11-01" date.assent="2008-08-29" date.first.valid="2008-08-30" stage="reprint" year="2008" prospective.consolidation="F">
      <label auto.number="no" denominator="yes">4 </label>
