<act id="DLM113794" in.amend="false" xml:lang="en-NZ" irdnumbering="no" act.no="2" act.type="private" date.as.at="2007-09-03" date.assent="1989-04-28" date.first.valid="2007-09-18" stage="in-force" year="1989">
