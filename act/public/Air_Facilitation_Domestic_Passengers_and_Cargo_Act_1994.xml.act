    <prov id="DLM334631" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">1</label>
      <heading>Short Title and commencement</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="no" denominator="yes">1</label>
          <para>
            <text>This Act may be cited as the Air Facilitation (Domestic Passengers and Cargo) Act 1994.</text>
          </para>
        </subprov>
        <subprov skeleton="no">
          <label auto.number="no" denominator="yes">2</label>
          <para>
            <text>This Act shall come into force on 1 November 1994.</text>
          </para>
        </subprov>
      </prov.body>
