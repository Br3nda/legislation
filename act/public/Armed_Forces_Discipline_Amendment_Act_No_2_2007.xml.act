    <schedule id="DLM1034372" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" xml:lang="en-NZ" act.no="98" act.type="public" date.as.at="2007-12-03" date.assent="2007-11-13" date.first.valid="2007-09-18" stage="not-in-force" year="2007">
