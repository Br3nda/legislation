    <schedule id="DLM330651" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" act.no="19" act.type="public" date.as.at="2009-01-01" date.assent="1994-06-29" date.first.valid="1994-07-01" stage="reprint" year="1994" prospective.consolidation="F">
