    <schedule id="DLM318867" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" xml:lang="en-NZ" act.no="101" act.type="public" date.as.at="2010-10-01" date.assent="1993-09-28" date.first.valid="2007-09-18" stage="reprint" year="1993" prospective.consolidation="F">
      <label auto.number="no" denominator="no">Schedule</label>
