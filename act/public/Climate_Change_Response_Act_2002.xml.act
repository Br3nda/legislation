    <prov id="DLM158587" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Title</heading>
      <prov.body>
        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="no"/>
          <para xml:lang="en-NZ">
            <text>This Act is the Climate Change Response Act 2002.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <part id="DLM158588" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" date.first.valid="2007-09-18" act.no="40" act.type="public" date.as.at="2009-12-08" date.assent="2002-11-18" stage="reprint" year="2002" prospective.consolidation="F">
