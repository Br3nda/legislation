    <prov id="DLM1131112" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">41</label>
      <heading>Limitation on power of entry under section 37</heading>
      <prov.body>
        <subprov skeleton="no">
