          <label auto.number="yes" denominator="yes"/>
          <para>
            <text><citation jurisdiction="nz"><atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1291644" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1644946 - prov 78" atidlm:xmlId="DLM1645543" atidlm:state="UNCHANGED"><atidlm:linkcontent>Sections 78 to 80</atidlm:linkcontent><atidlm:resourcepair atidlm:markupType="intref" atidlm:isIncludeOrRef="1" atidlm:seqNum="789809" atidlm:sourceXmlId="DLM1645543" atidlm:targetKey="13500005" atidlm:targetXmlId="DLM1585524" atidlm:targetName="prov 78" atidlm:sourceName="DLM1645543" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1130900.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1130900.xml" atidlm:state="UNCHANGED"><atidlm:metadata atidlm:name="Parent_id" atidlm:value="DLM1585523" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/></atidlm:resourcepair></atidlm:link></citation> amend the <citation jurisdiction="nz"><atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1291645" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1644947 - Goods and Services Tax Act 1985" atidlm:xmlId="DLM1645544" atidlm:state="UNCHANGED"><atidlm:linkcontent>Goods and Services Tax Act 1985</atidlm:linkcontent><atidlm:resourcepair atidlm:markupType="extref" atidlm:isIncludeOrRef="1" atidlm:seqNum="789810" atidlm:sourceXmlId="DLM1645544" atidlm:targetKey="460000" atidlm:targetXmlId="DLM81034" atidlm:targetName="Goods and Services Tax Act 1985" atidlm:sourceName="DLM1645544" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM81034.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1130900.xml" atidlm:state="UNCHANGED"><atidlm:metadata atidlm:name="Parent_id" atidlm:value="DLM1585523" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/></atidlm:resourcepair></atidlm:link></citation>.</text>
          </para>
        </subprov>
      </prov.body>
      <notes>
