          <amends-effective>
            <date>2009-01-01</date>
          </amends-effective>
          <amends-affect>
            <citation jurisdiction="nz">
              <atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1291646" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1644947 - Goods and Services Tax Act 1985" atidlm:xmlId="DLM1645545" atidlm:state="UNCHANGED">
