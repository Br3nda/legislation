  <body id="DLM2381638" prov-type="clause">
    <prov id="DLM2381639" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">1</label>
      <heading>Title</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="yes" denominator="yes"/>
          <para>
            <text>This Act is the Climate Change Response (Moderated Emissions Trading) Amendment Act <citation jurisdiction="nz">2009</citation>.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <prov id="DLM2381640" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">2</label>
      <heading>Commencement</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="yes" denominator="yes"/>
          <para>
            <text>This Act comes into force on the day after the date on which it receives the Royal assent.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <prov id="DLM2381641" irdnumbering="no" skeleton="no" toc="yes">
