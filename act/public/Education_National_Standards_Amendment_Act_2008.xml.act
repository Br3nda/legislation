          </amends-effective>
          <amends-affect>
            <citation jurisdiction="nz">
              <atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1468043" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1776740 - Education Act 1989" atidlm:xmlId="DLM1776750" atidlm:state="UNCHANGED">
                <atidlm:linkcontent>Education Act 1989</atidlm:linkcontent>
                <atidlm:resourcepair atidlm:markupType="extref" atidlm:isIncludeOrRef="1" atidlm:seqNum="845764" atidlm:sourceXmlId="DLM1776750" atidlm:targetKey="962805" atidlm:targetXmlId="DLM175958" atidlm:targetName="Education Act 1989" atidlm:sourceName="DLM1776750" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM175958.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1765400.xml" atidlm:state="UNCHANGED">
