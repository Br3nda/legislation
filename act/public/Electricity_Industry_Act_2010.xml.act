<act date.instructed="2009-09-11" id="DLM2634200" in.amend="false" instructing.office="Economic Development" irdnumbering="no" xml:lang="en-NZ" year.imprint="2010" act.no="116" act.type="public" date.as.at="2010-10-12" date.assent="2010-10-05" date.first.valid="2010-10-06" stage="in-force" year="2010" prospective.consolidation="F">
