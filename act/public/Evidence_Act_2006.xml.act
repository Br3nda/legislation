    <schedule hard.copy.reprint="2008-11-24" id="DLM394558" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" xml:lang="en-NZ" act.no="69" act.type="public" date.as.at="2009-12-01" date.assent="2006-12-04" date.first.valid="2007-09-18" stage="reprint" year="2006">
      <label auto.number="no" denominator="yes">2</label>
      <empowering-prov>
        <citation jurisdiction="nz">
          <intref href="DLM394552">s 216</intref>
