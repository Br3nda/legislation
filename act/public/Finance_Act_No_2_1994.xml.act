    <part id="DLM345272" in.amend="false" irdnumbering="no" toc="yes" date.first.valid="1994-12-09" act.no="134" act.type="public" date.as.at="1995-12-19" date.assent="1994-12-09" stage="reprint" year="1994" prospective.consolidation="F">
