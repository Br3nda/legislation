<act date.instructed="2007-08-03" id="DLM1584200" in.amend="false" instructing.office="Economic Development" irdnumbering="no" xml:lang="en-NZ" year.imprint="2008" act.no="91" act.type="public" date.as.at="2008-09-27" date.assent="2008-09-27" date.first.valid="2099-09-09" stage="not-in-force" year="2008">
  <cover id="DLM1584202">
    <title>Financial Advisers Act 2008</title>
    <assent>2008-09-27</assent>
    <commencement>see section 2</commencement>
  </cover>
  <contents>
    <heading>Contents</heading>
