      <prov id="DLM325176" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">49</label>
        <heading xml:lang="en-NZ">Amendments to other Acts</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
            <para xml:lang="en-NZ">
              <text>The enactments specified in <citation jurisdiction="nz"><intref href="DLM325197">Schedule 2</intref> to this Act</citation> are hereby amended in the manner indicated in that Schedule.</text>
            </para>
          </subprov>
        </prov.body>
