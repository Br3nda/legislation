    <prov id="DLM968354" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
      <label auto.number="no" denominator="yes">4</label>
      <heading xml:lang="en-NZ">Condition in restraint of marriage</heading>
      <prov.body>
        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">1</label>
          <para xml:lang="en-NZ">
            <text>The heading to <citation jurisdiction="nz">section 136</citation> is amended by adding <amend.in><emphasis style="bold">, civil union, or de facto relationship</emphasis></amend.in>.</text>
          </para>
        </subprov>
        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">2</label>
          <para xml:lang="en-NZ">
            <text><citation jurisdiction="nz">Section 136</citation> is amended by omitting <amend.in>marriage</amend.in> and substituting <amend.in>a person from marrying or entering into a civil union or de facto relationship</amend.in>.</text>
          </para>
        </subprov>
        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">3</label>
          <para xml:lang="en-NZ">
            <text><citation jurisdiction="nz">Section 136</citation> is amended by inserting <amend.in>or enter into a civil union or de facto relationship with</amend.in> after <quote.in>marry</quote.in>.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
