  <front id="DLM967920" xml:lang="en-NZ">
    <enactment>The Parliament of New Zealand enacts as follows:</enactment>
  </front>
  <body id="DLM967921" prov-type="section" xml:lang="en-NZ">
    <prov id="DLM967922" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Title</heading>
      <prov.body>
        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="no"/>
          <para xml:lang="en-NZ">
            <text>This Act is the Independent Police Conduct Authority Amendment Act 2007.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <part id="DLM967923" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" date.first.valid="2007-09-18" act.no="38" act.type="public" date.as.at="2007-11-29" date.assent="2007-09-11" stage="reprint" year="2007">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Preliminary provisions</heading>
      <prov id="DLM967924" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">2</label>
        <heading xml:lang="en-NZ">Commencement</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
            <para xml:lang="en-NZ">
              <text>This Act comes into force on a date to be appointed by the Governor-General by Order in Council.</text>
            </para>
          </subprov>
        </prov.body>
        <notes>
          <history>
            <history-note id="DLM1342185"><amended-provision>Section 2</amended-provision>: Independent Police Conduct Authority Amendment Act 2007 <amending-operation>brought into force</amending-operation>, on <amendment-date>29 November 2007</amendment-date>, by the <atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="978887" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1342184 - Independent Police Conduct Authority Amendment Act 2007 Commencement Order 2007" atidlm:xmlId="DLM1342189" atidlm:state="UNCHANGED"><atidlm:linkcontent>Independent Police Conduct Authority Amendment Act 2007 Commencement Order 2007</atidlm:linkcontent><atidlm:resourcepair atidlm:markupType="amending-provision" atidlm:isIncludeOrRef="1" atidlm:seqNum="672289" atidlm:sourceXmlId="DLM1342189" atidlm:targetKey="9954200" atidlm:targetXmlId="DLM974322" atidlm:targetName="Independent Police Conduct Authority Amendment Act 2007 Commencement Order 2007" atidlm:sourceName="DLM1342189" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZReg/fragxyxz_DLM974322.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM967923.xml" atidlm:state="UNCHANGED"><atidlm:metadata atidlm:name="Name" atidlm:value="history-note" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Amend" atidlm:value="false" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Element_Context" atidlm:value="/act[1]/body[1]/part[1]/prov[1]/notes[1]/history[1]/history-note[1]" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Element_Type" atidlm:value="history-note" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Heading" atidlm:value="history-note" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Label" atidlm:value="" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Legislation_Id" atidlm:value="DLM967918" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Legislation_Number" atidlm:value="38" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Legislation_Title" atidlm:value="Independent Police Conduct Authority Amendment Act 2007" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Legislation_Year" atidlm:value="2007" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/><atidlm:metadata atidlm:name="Revision_Number" atidlm:value="" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/></atidlm:resourcepair></atidlm:link> (SR 2007/324).</history-note>
          </history>
        </notes>
      </prov>
      <prov id="DLM967925" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">3</label>
        <heading xml:lang="en-NZ">Principal Act amended</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
            <para xml:lang="en-NZ">
              <text>This Act amends the Act that was previously called the <citation jurisdiction="nz">Police Complaints Authority Act 1988</citation>.</text>
            </para>
            <notes>
              <amends-note>
                <amends-effective>
                  <authority>OIC SR 2007/324</authority>
                  <date>2007-11-29</date>
                </amends-effective>
                <amends-affect>
