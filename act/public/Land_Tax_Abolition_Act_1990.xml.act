    <title xml:lang="en-NZ">Land Tax Abolition Act 1990</title>
    <assent>1990-08-08</assent>
    <commencement>see section 1(2)</commencement>
    <cover.reprint-note>
      <para xml:lang="en-NZ"/>
    </cover.reprint-note>
  </cover>
  <contents>
    <heading xml:lang="en-NZ">Contents</heading>
