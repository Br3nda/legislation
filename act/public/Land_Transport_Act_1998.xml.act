      <prov id="DLM434621" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">30Z</label>
        <heading xml:lang="en-NZ">Application of Part</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
            <para xml:lang="en-NZ">
              <text>Nothing in this Part applies in respect of any rail service vehicle.</text>
            </para>
          </subprov>
        </prov.body>
        <notes>
