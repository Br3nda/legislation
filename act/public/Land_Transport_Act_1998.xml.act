      <prov id="DLM435661" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">218</label>
        <heading xml:lang="en-NZ">Regulations and other enactments having effect under this Act</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="yes">1</label>
            <para xml:lang="en-NZ">
              <text>The following regulations are to be treated as regulations made under this Act:</text>
              <label-para skeleton="no" xml:lang="en-NZ">
                <label auto.number="no" denominator="yes">a</label>
                <para xml:lang="en-NZ">
                  <text><citation jurisdiction="nz">the <leg-title href="DLM1987">Goods Service Vehicle (Constructional) Regulations 1936</leg-title> (Reprinted SR 1961/94)</citation>:</text>
                </para>
              </label-para>
              <label-para skeleton="no" xml:lang="en-NZ">
                <label auto.number="no" denominator="yes">b</label>
                <para xml:lang="en-NZ">
                  <text><citation jurisdiction="nz">the <leg-title href="DLM21321">Transport (Vehicular Traffic Road Closure) Regulations 1965</leg-title> (SR 1965/63)</citation>:</text>
                </para>
              </label-para>
              <label-para skeleton="no" xml:lang="en-NZ">
                <label auto.number="no" denominator="yes">c</label>
                <para xml:lang="en-NZ">
                  <text><citation jurisdiction="nz">the <leg-title href="DLM43788">Heavy Motor Vehicle Regulations 1974</leg-title> (SR 1974/218)</citation>:</text>
                </para>
              </label-para>
              <label-para skeleton="no" xml:lang="en-NZ">
                <label auto.number="no" denominator="yes">d</label>
                <para xml:lang="en-NZ">
                  <text><citation jurisdiction="nz">the <leg-title href="DLM50037">Traffic Regulations 1976</leg-title> (SR 1976/227)</citation>.</text>
                </para>
              </label-para>
              <label-para deletion-status="repealed" skeleton="no" xml:lang="en-NZ">
                <label auto.number="no" denominator="yes">e</label>
                <para xml:lang="en-NZ">
                  <text/>
