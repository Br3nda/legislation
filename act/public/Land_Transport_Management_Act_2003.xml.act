      <subpart id="DLM1473932" in.amend="false" irdnumbering="no" toc="yes" act.no="118" act.type="public" date.as.at="2010-11-01" date.assent="2003-11-12" date.first.valid="2003-11-13" hard.copy.reprint="2009-01-01" stage="reprint" year="2003" prospective.consolidation="F">
        <label auto.number="no" denominator="yes">1</label>
        <heading>New Zealand Transport Agency</heading>
        <notes>
