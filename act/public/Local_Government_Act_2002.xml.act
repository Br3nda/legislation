      <prov id="DLM174094" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">268</label>
        <heading xml:lang="en-NZ">Repeal of Local Government (Prohibition of Liquor in Public Places) Amendment Act 2001</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="yes">1</label>
            <para xml:lang="en-NZ">
              <text>The Local Government (Prohibition of Liquor in Public Places) Amendment Act 2001 is repealed.</text>
            </para>
          </subprov>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="yes">2</label>
