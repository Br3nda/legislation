  <front id="DLM261628" xml:lang="en-NZ">
    <long-title id="DLM261629" toc="yes" xml:lang="en-NZ">
      <para xml:lang="en-NZ">
        <text>An Act to amend the <citation jurisdiction="nz"><leg-title href="DLM415531">Local Government Act 1974</leg-title></citation></text>
      </para>
    </long-title>
    <enactment>BE IT ENACTED by the Parliament of New Zealand as follows:</enactment>
