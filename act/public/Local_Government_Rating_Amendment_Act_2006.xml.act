    <part id="DLM374351" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" date.first.valid="2007-09-03" act.no="28" act.type="public" date.as.at="2007-09-03" date.assent="2006-06-27" stage="reprint" year="2006">
      <heading xml:lang="en-NZ">Transitional provisions</heading>
      <prov id="DLM374352" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">12</label>
        <heading xml:lang="en-NZ">Transitional provision in relation to amended rates assessments for errors in rating information database or rates record</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
