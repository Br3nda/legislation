      <prov id="DLM81218" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">59</label>
        <heading xml:lang="en-NZ">Membership of board</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="yes">1</label>
            <para xml:lang="en-NZ">
              <text>The board of <insertwords>CHFA</insertwords> consists of up to 5 members <insertwords>appointed under <citation jurisdiction="nz"><extref href="DLM329954">section 28</extref> of the Crown Entities Act 2004</citation></insertwords>.</text>
            </para>
