                  <colspec colname="col2" colwidth="1.41*"/>
                  <tbody>
                    <row>
                      <entry align="justify" colsep="0" rowsep="0">For the Government of New Zealand:</entry>
                      <entry align="justify" colsep="0" rowsep="0"/>
                      <entry align="justify" colsep="0" rowsep="0">For the Government of the United Kingdom of Great Britain and Northern Ireland:</entry>
                    </row>
                    <row>
                      <entry colsep="0" rowsep="0"/>
                      <entry colsep="0" rowsep="0"/>
                      <entry colsep="0" rowsep="0"/>
                    </row>
                    <row>
                      <entry colsep="0" rowsep="0">Phil Goff</entry>
