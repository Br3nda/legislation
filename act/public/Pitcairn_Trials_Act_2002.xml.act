    <schedule id="DLM170866" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" xml:lang="en-NZ" act.no="83" act.type="public" date.as.at="2005-06-01" date.assent="2002-12-18" date.first.valid="2007-09-18" stage="reprint" year="2002">
