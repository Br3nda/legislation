        <prov id="DLM351466" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">36</label>
          <heading xml:lang="en-NZ">Access to records of court-martial proceedings, etc, to help to determine victims' claims</heading>
          <prov.body>
            <subprov skeleton="no" xml:lang="en-NZ">
              <label auto.number="no" denominator="yes">1</label>
              <para xml:lang="en-NZ">
