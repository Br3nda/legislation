                  <label-para quote="1" skeleton="no" xml:lang="en-NZ">
                    <label auto.number="no" denominator="yes" quote="1">b</label>
                    <para xml:lang="en-NZ">
                      <text>in favour of the charge holder, the powers and conditions specified in that schedule.</text>
                    </para>
                  </label-para>
                </para>
              </subprov>
            </amend>
          </para>
        </schedule.amendments.group2>
        <schedule.amendments.group2 id="DLM1435117" toc="yes">
