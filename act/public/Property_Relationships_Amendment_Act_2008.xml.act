  <front id="DLM1303802">
    <enactment>The Parliament of New Zealand enacts as follows:</enactment>
  </front>
  <body id="DLM1303803" prov-type="section">
    <prov id="DLM1303900" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="no">1</label>
      <heading>Title</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="no" denominator="no"/>
          <para>
            <text>This Act is the Property (Relationships) Amendment Act 2008.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <prov id="DLM1303901" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="no">2</label>
      <heading>Commencement</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="no" denominator="yes">1</label>
          <para>
            <text>This Act comes into force on a date to be appointed by the Governor-General by Order in Council.</text>
          </para>
        </subprov>
        <subprov skeleton="no">
          <label auto.number="no" denominator="yes">2</label>
          <para>
            <text>One or more Orders in Council may be made appointing different dates for the commencement of different provisions and for different purposes.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <prov id="DLM1303804" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">3</label>
      <heading>Principal Act amended</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="no" denominator="no"/>
          <para>
            <text>This Act amends the <citation jurisdiction="nz"><atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1262406" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1621000 - Property (Relationships) Act 1976" atidlm:xmlId="DLM1621006" atidlm:state="UNCHANGED"><atidlm:linkcontent>Property (Relationships) Act 1976</atidlm:linkcontent><atidlm:resourcepair atidlm:markupType="extref" atidlm:isIncludeOrRef="1" atidlm:seqNum="777606" atidlm:sourceXmlId="DLM1621006" atidlm:targetKey="2879408" atidlm:targetXmlId="DLM440944" atidlm:targetName="Property (Relationships) Act 1976" atidlm:sourceName="DLM1621006" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM440944.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1303800.xml" atidlm:state="UNCHANGED"><atidlm:metadata atidlm:name="Parent_id" atidlm:value="DLM1303804" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/></atidlm:resourcepair></atidlm:link></citation>.</text>
          </para>
        </subprov>
      </prov.body>
      <notes>
        <amends-note>
          <amends-effective>
            <authority>OIC</authority>
            <date>2009-05-18</date>
          </amends-effective>
          <amends-affect>
            <citation jurisdiction="nz">
              <atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1262407" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1621001 - Property (Relationships) Act 1976" atidlm:xmlId="DLM1621007" atidlm:state="UNCHANGED">
                <atidlm:linkcontent>Property (Relationships) Act 1976</atidlm:linkcontent>
                <atidlm:resourcepair atidlm:markupType="extref" atidlm:isIncludeOrRef="1" atidlm:seqNum="777607" atidlm:sourceXmlId="DLM1621007" atidlm:targetKey="2879408" atidlm:targetXmlId="DLM440944" atidlm:targetName="Property (Relationships) Act 1976" atidlm:sourceName="DLM1621007" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM440944.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1303800.xml" atidlm:state="UNCHANGED">
                  <atidlm:metadata atidlm:name="Parent_id" atidlm:value="DLM1303804" atidlm:locale="xx_XX" atidlm:state="UNCHANGED"/>
