    <part id="DLM968903" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" date.first.valid="2007-09-18" act.no="90" act.type="public" date.as.at="2007-11-05" date.assent="2007-09-25" stage="in-force" year="2007">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Miscellaneous amendments</heading>
      <prov id="DLM968904" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">4</label>
        <heading xml:lang="en-NZ">Persons who may apply for exercise of Court's jurisdiction</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
            <label auto.number="no" denominator="no"/>
            <para xml:lang="en-NZ">
              <text><citation jurisdiction="nz">Section 7</citation> is amended by repealing <citation jurisdiction="nz">paragraph (f)</citation> and substituting the following paragraph:</text>
              <amend>
                <label-para skeleton="no" xml:lang="en-NZ">
                  <label auto.number="no" denominator="yes">f</label>
                  <para xml:lang="en-NZ">
                    <text>where the exercise of the Court's jurisdiction is sought in respect of any person who is a patient or a resident in any place that provides hospital care, rest home care, or residential disability care within the meaning of the <citation jurisdiction="nz">Health and Disability Services (Safety) Act 2001</citation>, the principal manager of that place:</text>
                  </para>
                </label-para>
              </amend>
              <follow-text space-before="no">.</follow-text>
            </para>
          </subprov>
        </prov.body>
      </prov>
