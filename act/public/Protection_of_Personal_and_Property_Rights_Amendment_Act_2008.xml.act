              <atidlm:link xmlns:atidlm="http://www.arbortext.com/namespace/atidlm" atidlm:key="1261270" atidlm:branchLabel="_NOVERSION_" atidlm:name="DLM1620460 - Protection of Personal and Property Rights Act 1988" atidlm:xmlId="DLM1620470" atidlm:state="UNCHANGED">
                <atidlm:linkcontent>Protection of Personal and Property Rights Act 1988</atidlm:linkcontent>
                <atidlm:resourcepair atidlm:markupType="extref" atidlm:isIncludeOrRef="1" atidlm:seqNum="777471" atidlm:sourceXmlId="DLM1620470" atidlm:targetKey="698400" atidlm:targetXmlId="DLM126527" atidlm:targetName="Protection of Personal and Property Rights Act 1988" atidlm:sourceName="DLM1620470" atidlm:targetLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM126527.xml" atidlm:sourceLocator="file:///C:/epicuser/doctypes/NZAct/fragxyxz_DLM1304102.xml" atidlm:state="UNCHANGED">
