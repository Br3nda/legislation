    <title xml:lang="en-NZ">Radio New Zealand Act (No 2) 1995</title>
    <assent>1995-09-25</assent>
    <commencement>see section 1(2)</commencement>
    <cover.reprint-note>
      <para xml:lang="en-NZ"/>
    </cover.reprint-note>
  </cover>
  <contents>
    <heading xml:lang="en-NZ">Contents</heading>
    <toc/>
