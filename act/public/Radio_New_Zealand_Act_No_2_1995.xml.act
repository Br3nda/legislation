<act id="DLM368668" in.amend="false" instructing.office="Treasury" irdnumbering="no" xml:lang="en-NZ" year.imprint="2005" act.no="53" act.type="public" date.as.at="2007-09-03" date.assent="1995-09-25" date.first.valid="2007-09-18" stage="in-force" year="1995">
