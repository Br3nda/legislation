    <schedule id="DLM75070" in.amend="false" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" xml:lang="en-NZ" act.no="48" act.type="public" date.as.at="2010-10-01" date.assent="2000-11-14" date.first.valid="2007-09-18" stage="reprint" year="2000" prospective.consolidation="F">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Forms</heading>
      <schedule.forms>
        <form id="DLM75071" toc="yes" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">1</label>
          <empowering-prov>
            <citation jurisdiction="nz"><intref href="DLM74573">ss 8(3)</intref>, <intref href="DLM74574">9(3)(b)</intref></citation>
          </empowering-prov>
          <heading xml:lang="en-NZ">Declaration by Returning Officer or by person employed or engaged for purposes of referendum</heading>
          <form.body>
            <para>
