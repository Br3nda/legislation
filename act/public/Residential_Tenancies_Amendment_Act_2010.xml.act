    <schedule date.instructed="2009-04-16" id="DLM1990612" in.amend="false" instructing.office="Building and Housing" irdnumbering="no" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" act.no="95" act.type="public" date.as.at="2010-07-22" date.assent="2010-07-22" date.first.valid="2010-10-01" stage="not-in-force" year="2010" prospective.consolidation="F">
