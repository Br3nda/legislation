        <subprov skeleton="no" xml:lang="en-NZ">
          <label auto.number="no" denominator="no"/>
          <para xml:lang="en-NZ">
            <text>This Act amends the <citation jurisdiction="nz">Securities Transfer Act 1991</citation>.</text>
          </para>
          <notes>
            <amends-note>
              <amends-effective>
                <date>2007-09-20</date>
              </amends-effective>
              <amends-affect>
