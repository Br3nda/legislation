  <body id="DLM404724" prov-type="section" xml:lang="en-NZ">
    <prov id="DLM404725" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
      <label auto.number="no" denominator="yes">1</label>
      <heading xml:lang="en-NZ">Title</heading>
