    <prov id="DLM1509407" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">1</label>
      <heading>Title</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="yes" denominator="yes"/>
          <para>
            <text>This Act is the Subordinate Legislation (Confirmation
and Validation) Act 2008.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
