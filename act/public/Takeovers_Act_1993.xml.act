      <schedule.misc>
        <prov deletion-status="repealed" id="DLM326774" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">1</label>
          <heading xml:lang="en-NZ">Term of office</heading>
          <prov.body/>
