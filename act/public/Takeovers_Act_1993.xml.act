        <prov deletion-status="repealed" id="DLM326364" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
          <label auto.number="no" denominator="yes">40</label>
          <heading xml:lang="en-NZ">Revocation, variation, and suspension of orders</heading>
          <prov.body/>
          <notes>
