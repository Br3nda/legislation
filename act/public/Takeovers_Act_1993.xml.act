      </notes>
      <subpart id="DLM325885" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" act.no="107" act.type="public" date.as.at="2010-07-07" date.assent="1993-09-28" date.first.valid="2007-09-18" stage="reprint" year="1993" prospective.consolidation="F">
        <label auto.number="no" denominator="yes">1</label>
        <heading xml:lang="en-NZ">Investigation and enforcement by Panel</heading>
        <notes>
          <history>
