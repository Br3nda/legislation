    <part id="DLM325882" in.amend="false" irdnumbering="no" toc="yes" xml:lang="en-NZ" date.first.valid="2007-09-18" act.no="107" act.type="public" date.as.at="2010-07-07" date.assent="1993-09-28" stage="reprint" year="1993" prospective.consolidation="F">
