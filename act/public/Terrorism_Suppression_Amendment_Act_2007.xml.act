                  <label auto.number="no" denominator="yes">ba</label>
                  <para xml:lang="en-NZ">
                    <text>must state that any person who deals with the entity's property may be liable to prosecution for an offence under <citation jurisdiction="nz">section 9</citation>:</text>
                  </para>
                </label-para>
              </amend>
              <follow-text space-before="no">.</follow-text>
            </para>
          </subprov>
          <subprov skeleton="no" xml:lang="en-NZ">
