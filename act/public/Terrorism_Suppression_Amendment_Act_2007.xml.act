      <prov id="DLM1034448" irdnumbering="no" skeleton="no" toc="yes" xml:lang="en-NZ">
        <label auto.number="no" denominator="yes">19</label>
        <heading xml:lang="en-NZ">United Nations Security Council information</heading>
        <prov.body>
          <subprov skeleton="no" xml:lang="en-NZ">
