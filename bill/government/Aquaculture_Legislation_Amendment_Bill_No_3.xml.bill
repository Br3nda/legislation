      <prov id="DLM3342365" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">95</label>
        <heading>Right of objection to consent authority against certain decisions or requirements</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>Section 357A(1)(a)(ii) is amended by omitting <amend.in quote="1">125(1)(b)</amend.in> and substituting <amend.in quote="1">125(1A)(b)</amend.in>.</text>
            </para>
