                        <entry colsep="0" rowsep="0">
                          <para>
                            <text>Relevant landscape features (e.g. structures)</text>
                          </para>
                        </entry>
                        <entry colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0">X</entry>
                        <entry align="left" colsep="0" rowsep="0"/>
                        <entry align="left" colsep="0" rowsep="0"/>
                      </row>
                    </tbody>
                  </tgroup>
