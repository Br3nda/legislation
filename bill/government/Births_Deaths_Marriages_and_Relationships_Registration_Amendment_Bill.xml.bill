          <subprov amend.level1="insert-cowh" skeleton="no">
            <label amend.level1="insert-cowh" auto.number="no" denominator="yes">3</label>
            <para amend.level1="insert-cowh">
              <text>Section 29(3)(a) is amended by omitting <amend.in quote="1">registration</amend.in> and substituting <amend.in quote="1">record</amend.in>.</text>
