      <subpart id="DLM2930025" in.amend="false" irdnumbering="no" official="yes" toc="yes" bill.no="147" bill.type="government" stage="1" year="2010">
        <label auto.number="no" denominator="yes">9</label>
        <heading>Amendments to Railways Act 2005</heading>
        <prov id="DLM2930026" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="yes">95</label>
          <heading>Principal Act amended</heading>
          <prov.body>
