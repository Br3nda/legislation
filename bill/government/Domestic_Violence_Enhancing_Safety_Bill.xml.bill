      <schedule.amendments amend.level1="insert-unanimous">
        <schedule.amendments.group2 amend.level1="insert-unanimous" id="DLM2181021" toc="yes">
          <heading amend.level1="insert-unanimous">Domestic Violence Rules 1996 (SR 1996/148)</heading>
