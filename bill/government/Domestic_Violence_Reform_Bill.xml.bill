      <prov id="DLM1642972" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">32</label>
        <heading>Procedure where respondent does not require hearing</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="yes" denominator="yes"/>
            <para>
              <text>Section 77 is amended by inserting the following subsection after subsection (1):</text>
              <amend quote="1">
