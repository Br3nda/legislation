      <prov id="DLM1642968" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">28</label>
        <heading>Application without notice for occupation order or tenancy order</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="yes" denominator="yes"/>
            <para>
              <text>Section 60 is amended by inserting the following subsection after subsection (2):</text>
              <amend quote="1">
