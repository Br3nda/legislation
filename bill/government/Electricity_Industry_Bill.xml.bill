              <label-para amend.level1="insert-unanimous" skeleton="no">
                <label amend.level1="insert-unanimous" auto.number="no" denominator="yes">g</label>
                <para amend.level1="insert-unanimous">
                  <text>Lower Waitaki Irrigation Company Limited; and</text>
                </para>
              </label-para>
              <label-para amend.level1="insert-unanimous" skeleton="no">
                <label amend.level1="insert-unanimous" auto.number="no" denominator="yes">h</label>
                <para amend.level1="insert-unanimous">
                  <text>Maerewhenua District Water Resource Co. Limited; and</text>
                </para>
              </label-para>
              <label-para amend.level1="insert-unanimous" skeleton="no">
                <label amend.level1="insert-unanimous" auto.number="no" denominator="yes">i</label>
                <para amend.level1="insert-unanimous">
                  <text>Morven, Glenavy, Ikawai Irrigation Company Limited; and</text>
                </para>
              </label-para>
              <label-para amend.level1="insert-unanimous" skeleton="no">
                <label amend.level1="insert-unanimous" auto.number="no" denominator="yes">j</label>
