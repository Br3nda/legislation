      <prov id="DLM3232206" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">209</label>
        <heading>Interpretation</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>In <changeable><citation jurisdiction="nz">sections 210 to 216</citation></changeable>, <def-term id="DLM3232207">commencement date</def-term> means the date on which this section comes into force.</text>
            </para>
          </subprov>
