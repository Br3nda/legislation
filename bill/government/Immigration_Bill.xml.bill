        <schedule.amendments.group2 amend.level1="struckout-cowh" id="DLM1441628" toc="yes">
          <heading amend.level1="struckout-cowh">Parole Act 2002 (2002 No 10)</heading>
          <para amend.level1="struckout-cowh">
            <text>Section 55(1)(b) and (c): repeal and substitute:</text>
            <amend amend.level1="struckout-cowh" increment="1" quote="1">
              <label-para amend.level1="struckout-cowh" quote="1" skeleton="no">
