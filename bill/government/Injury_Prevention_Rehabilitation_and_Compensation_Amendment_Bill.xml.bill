            <text>The following provisions come into force on <changeable>1 July 2010</changeable>:</text>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">a</label>
              <para>
                <text><changeable><citation jurisdiction="nz">section 4(2)</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">b</label>
              <para>
                <text><changeable><citation jurisdiction="nz">section 6</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">c</label>
              <para>
                <text><changeable><citation jurisdiction="nz">section 7</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">d</label>
              <para>
                <text><changeable><citation jurisdiction="nz">sections 9 to 11</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">e</label>
              <para>
                <text><changeable><citation jurisdiction="nz">section 17</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">f</label>
              <para>
                <text><changeable><citation jurisdiction="nz">section 32</citation></changeable>:</text>
              </para>
            </label-para>
            <label-para skeleton="no">
              <label auto.number="no" denominator="yes">g</label>
