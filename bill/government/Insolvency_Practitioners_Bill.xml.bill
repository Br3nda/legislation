    <part id="DLM2921214" in.amend="false" irdnumbering="no" official="yes" toc="yes" bill.no="141" bill.type="government" stage="1" year="2010">
      <label auto.number="no" denominator="yes">1</label>
      <heading>Amendments to Companies Act 1993</heading>
      <prov id="DLM2921215" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">3</label>
        <heading>Principal Act amended</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>This <changeable><citation jurisdiction="nz">Part</citation></changeable> amends the Companies Act 1993.</text>
            </para>
