      <prov amend.level1="insert-majority" id="DLM2014955" irdnumbering="no" skeleton="no" toc="yes">
        <label amend.level1="insert-majority" auto.number="no" denominator="yes">17D</label>
        <heading amend.level1="insert-majority">Regulations and other enactments having effect under this Act</heading>
        <prov.body>
          <subprov amend.level1="insert-majority" skeleton="no">
