      <prov id="DLM2922444" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">21</label>
        <heading>Investment policy</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes">1</label>
            <para>
              <text>Section 105 is amended by omitting <amend.in quote="1">section 102(4)(c)</amend.in> and substituting <amend.in quote="1"><changeable><citation jurisdiction="nz">section 102(2)(c)</citation></changeable></amend.in>.</text>
            </para>
          </subprov>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes">2</label>
            <para>
              <text>Section 105(a) is repealed.</text>
            </para>
          </subprov>
