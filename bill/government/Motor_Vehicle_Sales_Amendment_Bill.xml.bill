  <body id="DLM2061906" prov-type="clause">
    <prov id="DLM2061907" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">1</label>
      <heading>Title</heading>
      <prov.body>
        <subprov skeleton="no">
          <label auto.number="yes" denominator="yes"/>
          <para>
            <text>This Act is the Motor Vehicle Sales Amendment Act <changeable>2009</changeable>.</text>
