        <prov id="DLM2274939" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="yes">48</label>
          <heading>Ruatangata site</heading>
          <prov.body>
            <subprov skeleton="no">
              <label auto.number="no" denominator="yes">1</label>
