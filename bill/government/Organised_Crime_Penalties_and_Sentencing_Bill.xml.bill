      <prov id="DLM1046411" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">4</label>
        <heading>Participation in organised criminal group</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes">1</label>
            <para>
              <text>Section 98A(1) is amended by omitting <amend.in quote="1">5</amend.in> and substituting <amend.in quote="1">10</amend.in>.</text>
            </para>
          </subprov>
