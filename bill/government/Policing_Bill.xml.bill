        <crosshead id="DLM1102379" toc="yes">Amendment to Hazardous Substances (Classes 1 to 5 Controls) Regulations 2001</crosshead>
        <prov id="DLM1102380" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="yes">119</label>
          <heading>Amendment to Hazardous Substances (Classes 1 to 5 Controls) Regulations 2001</heading>
          <prov.body>
