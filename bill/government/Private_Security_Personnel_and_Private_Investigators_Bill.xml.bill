      <schedule.misc>
        <prov id="DLM1594664" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="no">1</label>
          <prov.body>
            <para>
              <text>Any of <changeable><citation jurisdiction="nz">sections 79, 101, or 102</citation></changeable> of this Act.</text>
            </para>
          </prov.body>
        </prov>
        <prov id="DLM1594666" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="no">3</label>
          <prov.body>
            <para>
              <text>Section 29 or 30 of the Summary Offences Act 1981.</text>
            </para>
          </prov.body>
