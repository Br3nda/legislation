      <heading>Discretionary grounds for cancellation of licence or certificate</heading>
      <schedule.misc>
        <prov id="DLM1594664" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="no">1</label>
          <prov.body>
            <para>
              <text>Any of <changeable><citation jurisdiction="nz">sections <struckoutwords amend.level1="struckout-unanimous">68, </struckoutwords>79, 101, or 102</citation></changeable> of this Act.</text>
            </para>
          </prov.body>
        </prov>
        <prov amend.level1="struckout-unanimous" id="DLM1594665" irdnumbering="no" skeleton="no" toc="yes">
          <label amend.level1="struckout-unanimous" auto.number="no" denominator="no">2</label>
          <prov.body>
            <para amend.level1="struckout-unanimous">
              <text>Any provision of the Arms Act 1983.</text>
            </para>
          </prov.body>
        </prov>
        <prov id="DLM1594666" irdnumbering="no" skeleton="no" toc="yes">
          <label auto.number="no" denominator="no">3</label>
