<bill id="DLM1474000" in.amend="false" irdnumbering="no" official="yes" xml:lang="en-NZ" year.imprint="2009" bill.no="252" bill.type="government" split.letter="A" stage="3" year="2008">
  <billdetail>
    <title>Reserve Bank of New Zealand Amendment Bill</title>
    <billtype>Government Bill</billtype>
    <repnote>As reported from the committee of the whole House</repnote>
    <billnote>
      <para>
        <text>This bill was formerly part of the Settlement Systems, Futures, and Emissions Units Bill as reported from the Commerce Committee. The committee of the whole House has further amended the bill and has divided it into the following bills:</text>
      </para>
      <para>
        <list>
          <item>
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>This bill comprising Parts 1 and 2</text>
            </para>
          </item>
          <item>
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>Securities Markets Amendment Bill comprising Part 3 and Schedules 1 and 2</text>
            </para>
          </item>
          <item>
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>Personal Property Securities Amendment Bill comprising Part 4</text>
            </para>
          </item>
          <item>
            <label auto.number="no" denominator="yes"/>
            <para>
              <text>Securities Amendment Bill comprising Part 5</text>
            </para>
          </item>
        </list>
      </para>
    </billnote>
  </billdetail>
