      <prov id="DLM1848091" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">50</label>
        <heading>Matters to be considered by regional council</heading>
        <prov.body>
          <subprov skeleton="no">
            <label auto.number="yes" denominator="yes"/>
            <para>
              <text>Section 66(3) is amended by adding <amend.in quote="1">or the effects of trade competition</amend.in>.</text>
            </para>
          </subprov>
