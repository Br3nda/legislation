      <prov amend.level1="struckout-unanimous" id="DLM1826737" irdnumbering="no" skeleton="no" toc="yes">
        <label amend.level1="struckout-unanimous" auto.number="no" denominator="yes">10</label>
        <heading amend.level1="struckout-unanimous">Amendment to Social Security Act 1964</heading>
        <prov.body>
          <subprov amend.level1="struckout-unanimous" skeleton="no">
            <label amend.level1="struckout-unanimous" auto.number="no" denominator="yes">1</label>
            <para amend.level1="struckout-unanimous">
              <text>This section amends the Social Security Act 1964.</text>
            </para>
          </subprov>
          <subprov amend.level1="struckout-unanimous" skeleton="no">
            <label amend.level1="struckout-unanimous" auto.number="no" denominator="yes">2</label>
            <para amend.level1="struckout-unanimous">
              <text>The definition of <def-term id="DLM1826738">fine</def-term> in section 126A(1) is amended by adding the following paragraph:</text>
              <amend increment="1" quote="1">
                <label-para quote="1" skeleton="no">
                  <label auto.number="no" denominator="yes" quote="1">c</label>
                  <para>
                    <text>a levy payable under <changeable><citation jurisdiction="nz">section 105B</citation></changeable> of the Sentencing Act 2002.</text>
                  </para>
                </label-para>
              </amend>
            </para>
          </subprov>
        </prov.body>
