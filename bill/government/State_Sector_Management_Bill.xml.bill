      <subpart id="DLM3169109" in.amend="false" irdnumbering="no" official="yes" toc="yes" bill.no="193" bill.type="government" stage="1" year="2010">
        <label auto.number="no" denominator="yes">1</label>
        <heading>Amendments to principal Act</heading>
        <prov id="DLM3169110" irdnumbering="no" skeleton="no" toc="yes">
