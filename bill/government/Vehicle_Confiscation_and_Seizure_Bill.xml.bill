  <schedule.group>
    <schedule id="DLM2095811" in.amend="false" irdnumbering="no" official="yes" prov-type="clause" schedule.heading.continue="no" toc="yes" type="schedule" bill.no="42" bill.type="government" stage="1" year="2009">
      <label auto.number="no" denominator="yes"/>
      <empowering-prov>
        <changeable>
