          <label auto.number="yes" denominator="yes"/>
          <para>
            <text>This Act is the Electoral (Disqualification of Convicted Prisoners) Amendment Act <emphasis style="bold">2010</emphasis>.</text>
          </para>
        </subprov>
      </prov.body>
    </prov>
    <prov id="DLM2739706" irdnumbering="no" skeleton="no" toc="yes">
      <label auto.number="no" denominator="yes">2</label>
