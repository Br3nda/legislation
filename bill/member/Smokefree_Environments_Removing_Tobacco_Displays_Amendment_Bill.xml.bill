            <label auto.number="no" denominator="yes"/>
            <para>
              <text>Section 32(3) is repealed.</text>
            </para>
          </subprov>
        </prov.body>
      </prov>
      <prov id="DLM3226925" irdnumbering="no" skeleton="no" toc="yes">
        <label auto.number="no" denominator="yes">12</label>
        <heading>Labelling and health messages for herbal smoking products</heading>
        <prov.body>
