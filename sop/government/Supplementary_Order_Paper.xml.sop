    <sop.amend id="DLM2809649">
      <clause.ref>New clauses 12A and 12B</clause.ref>
      <sop.para>
        <text>To insert the following clauses after <emphasis style="italic">clause 12</emphasis> (after line 7 on page 10):</text>
        <instrument.amend close.quote="no" open.quote="no">
          <prov id="DLM2809650" irdnumbering="no" skeleton="no" toc="yes">
