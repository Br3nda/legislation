    <sop.amend id="DLM1777718">
      <clause.ref>Clause 146</clause.ref>
      <sop.para>
        <text>To add the following subclause (after line 12 on page 103):</text>
        <instrument.amend close.quote="no" open.quote="no">
          <subprov skeleton="no">
            <label auto.number="no" denominator="yes">3</label>
