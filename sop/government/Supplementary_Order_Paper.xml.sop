                  </amend>
                </para>
              </subprov>
            </prov.body>
          </prov>
        </instrument.amend>
      </sop.para>
    </sop.amend>
    <sop.amend id="DLM2809644">
      <clause.ref>Clause 10: new section 17</clause.ref>
      <sop.para>
