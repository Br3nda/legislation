      <sop.para>
        <text>To insert the following clauses after clause 87 (after line 8 on page 74):</text>
        <instrument.amend close.quote="no" open.quote="no">
          <prov id="DLM1054229" irdnumbering="no" skeleton="no" toc="yes">
            <label auto.number="no" denominator="yes">87A</label>
