    <sop.amend id="DLM1624731">
      <clause.ref>New clause 81A</clause.ref>
      <sop.para>
        <text>To insert the following clause after <emphasis style="italic">clause 81</emphasis> (after line 27 on page 103):</text>
        <instrument.amend close.quote="no" open.quote="no">
          <prov id="DLM1624732" irdnumbering="no" skeleton="no" toc="yes">
