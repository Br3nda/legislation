    <sop.amend id="DLM1226882">
      <clause.ref>Clause 30: new section 78H</clause.ref>
      <sop.para>
        <text>To add the following section (after line 7 on page 29):</text>
        <instrument.amend close.quote="yes" open.quote="yes" quote="1">
          <prov id="DLM1226883" irdnumbering="no" quote="1" skeleton="no" toc="yes">
            <label auto.number="no" denominator="yes" quote="1">78H</label>
            <heading>Review of operation of sections 74 to 75G, 78E, and 78F </heading>
            <prov.body>
              <subprov quote="1" skeleton="no">
                <label auto.number="no" denominator="yes" quote="1">1</label>
