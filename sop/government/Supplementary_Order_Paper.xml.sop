    <sop.amend id="DLM3200406">
      <clause.ref>New clause 132A</clause.ref>
      <sop.para>
        <text>To insert the following clause after <emphasis style="italic">clause 132</emphasis> (after line 22 on page 105):</text>
        <instrument.amend close.quote="no" open.quote="no">
